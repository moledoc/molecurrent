<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <item label="Browser">
    <action name="Execute"><execute>x-www-browser</execute></action>
  </item>
  <item label="Files">
    <action name="Execute"><execute>spacefm</execute></action>
  </item>
  <item label="Mail">
    <action name="Execute"><execute>thunderbird</execute></action>
  </item>
  <item label="Acme">
    <action name="Execute"><execute>start-acme.sh</execute></action>
  </item>
  <item label="Screenshot">
    <action name="Execute"><execute>flameshot launcher</execute></action>
  </item>
  <item label="Keepass">
    <action name="Execute"><execute>keepassxc</execute></action>
  </item>
  <!-- This requires the presence of the 'obamenu' package to work -->
  <separator />
  <item label="Datetime">
    <action name="Execute"><execute>datetime.sh</execute></action>
  </item>
  <item label="Battery">
    <action name="Execute"><execute>battery.sh</execute></action>
  </item>
  <item label="Wifi">
    <action name="Execute"><execute>xterm -e nmtui</execute></action>
  </item>
  <item label="Shortcuts">
    <action name="Execute"><execute>xterm -e "vi $HOME/.config/sxhkd/sxhkdrc"</execute></action>
  </item>
  <separator />
  <menu id="/Debian" />
  <separator />
  <menu id="applications-menu" label="Applications" execute="/usr/bin/obamenu"/>
  <separator />
  <menu id="ob-sxhkd" label="ob-sxhkd">
	  <item label="ObConf">
	    <action name="Execute"><execute>obconf</execute></action>
	  </item>
	  <item label="Reconfigure">
	    <action name="Reconfigure" />
	  </item>
	  <item label="Restart Openbox">
	    <action name="Restart" />
	  </item>
	  <item label="Restart sxhkd">
	    <action name="Execute">
		 <execute>xdotool key ctrl+alt+k+r</execute>
	    </action>
	  </item>
  </menu>
  <separator />
  <item label="Lock">
    <action name="Execute">
         <execute>xdotool key super+l</execute>
    </action>
  </item>
  <item label="Logout">
    <action name="Exit" />
  </item>
  <item label="Restart">
    <action name="Execute">
         <prompt>Are you sure you want to reboot?</prompt>
         <execute>/usr/sbin/reboot</execute>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
         <prompt>Are you sure you want to shutdown?</prompt>
         <execute>/usr/sbin/shutdown now</execute>
    </action>
  </item>
</menu>
</openbox_menu>
