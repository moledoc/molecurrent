# sound: superuser.com/questions/1577281/xev-not-detecting-media-keys
XF86AudioMute
	sound.sh "toggle"
XF86AudioRaiseVolume
	sound.sh "5%+"
XF86AudioLowerVolume
	sound.sh "5%-"
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioMicMute
	toggle-mic.sh

# duplicate for use on keyboard w/o media keys
shift + XF86AudioMute
	playerctl play-pause
shift + XF86AudioRaiseVolume
	playerctl next
shift + XF86AudioLowerVolume
	playerctl previous

# brightness
XF86MonBrightnessUp
	brightness.sh + "$BRIGHTNESS_STEP"
XF86MonBrightnessDown
	brightness.sh - "$BRIGHTNESS_STEP"

# terminal
super + Return
	$TERM
ctrl + alt + t
	$TERM

# browser
super + b
	$BROWSER

# langs
super + space
	toggle-lang.sh

# show datetime
alt + d
	datetime.sh

# show battery
alt + b
	battery.sh

# lock screen
super + l
	 slock

## screenshot
#Print
#	 flameshot launcher

# file explorer
super + e
	spacefm

# change wallpaper
ctrl + alt + w + p
	feh --recursive --bg-fill --randomize /usr/share/backgrounds &

# restart sxhkd
super + k + r
	sxhkdPID=$(pgrep -x sxhkd); test $sxhkdPID && kill -9 $sxhkdPID && sxhkd &

# logout
ctrl + alt + o + l
	kill -9 $(pgrep -x "$WM")

# reboot
ctrl + alt + s + r
	reboot

# shutdown
ctrl + alt + s + q
	shutdown now

# menu
super + button3
	menu.sh

# run launcher
#super + p
#	dmenu_run

# run launcher
super + p
	launcher
