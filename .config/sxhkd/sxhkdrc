# sound: superuser.com/questions/1577281/xev-not-detecting-media-keys
XF86AudioMute
	sound.sh "toggle"
XF86AudioRaiseVolume
	sound.sh "5%+"
XF86AudioLowerVolume
	sound.sh "5%-"
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# duplicate for use on keyboard w/o media keys
shift + XF86AudioMute
	playerctl play-pause
shift + XF86AudioRaiseVolume
	playerctl next
shift + XF86AudioLowerVolume
	playerctl previous

# brightness
XF86MonBrightnessUp
	brightness.sh + "$BRIGHTNESS_STEP"
XF86MonBrightnessDown
	brightness.sh - "$BRIGHTNESS_STEP"

# langs
super + space
	toggle-lang.sh

# show datetime
alt + d
	datetime.sh

# show battery
alt + b
	battery.sh

# lock screen
super + l
	 slock

# screenshot
Print
	 flameshot launcher


# restart sxhkd
ctrl + alt + k + r
	sxhkdPID=$(pgrep -x sxhkd); test $sxhkdPID && kill -9 $sxhkdPID && sxhkd &

# logout
ctrl + alt + o + l
	openbox --exit	

# reboot
ctrl + alt + s + r
	reboot

# shutdown
ctrl + alt + s + q
	shutdown now
