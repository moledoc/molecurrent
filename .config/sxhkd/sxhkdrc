# sound: superuser.com/questions/1577281/xev-not-detecting-media-keys
XF86AudioMute
	sound.sh "toggle"
XF86AudioRaiseVolume
	sound.sh "5%+"
XF86AudioLowerVolume
	sound.sh "5%-"
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# duplicate for use on keyboard w/o media keys. xdotools didn't work
shift + XF86AudioMute
	playerctl play-pause
shift + XF86AudioRaiseVolume
	playerctl next
shift + XF86AudioLowerVolume
	playerctl previous

# brightness
XF86MonBrightnessUp
	brightness.sh "+$BRIGHTNESS_STEP"
XF86MonBrightnessDown
	brightness.sh "-$BRIGHTNESS_STEP"
# langs
super + space
	toggle-lang.sh
# restart sxhkd
super + shift + r
	sxhkdPID=$(pgrep -x sxhkd); test $sxhkdPID && kill -9 $sxhkdPID && sxhkd &
# show datetime
alt + d
	datetime.sh
super + l
	 i3lock --image=$(find /usr/share/backgrounds/ -name "*.png" | shuf | head -n 1)	

Print
	 flameshot launcher

